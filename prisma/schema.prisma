generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model Comparison {
  id            String   @id @default(cuid())
  masterFile    String
  secondaryFile String
  totalRows     Int
  matchedRows   Int
  unmatchedRows Int
  masterData    String   // JSON string of master data
  secondaryData String   // JSON string of secondary data
  comparisonData String  // JSON string of comparison results
  masterColumns String?  // JSON array of selected master columns
  secondaryColumns String? // JSON array of selected secondary columns
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  
  @@index([createdAt])
  @@index([masterFile])
  @@index([secondaryFile])
}
